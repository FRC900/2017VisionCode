<?xml version="1.0"?>

<launch>
  <arg name="camera" default="zed" />
  <arg name="tf_prefix" default="" />
  <arg name="pi/2" value="1.5707963267948966" />
  <arg name="optical_rotate" value="0 0 0 -$(arg pi/2) 0 -$(arg pi/2)" />

  <!-- Re-enable if ZED is only source of odom data?
  <node pkg="tf2_ros" type="static_transform_publisher" name="$(arg camera)_base_link1"
    args="0 0 0 0 0 0 1 odom $(arg tf_prefix)/$(arg camera)_initial_frame" />
-->

  <node pkg="tf2_ros" type="static_transform_publisher" name="$(arg camera)_base_link3"
	  args="$(arg optical_rotate) $(arg tf_prefix)/$(arg camera)_current_frame $(arg camera)_left_camera" />

  <node pkg="tf2_ros" type="static_transform_publisher" name="$(arg camera)_base_link4"
    args="0 0 0 -$(arg pi/2) 0 -$(arg pi/2) $(arg tf_prefix)/$(arg camera)_current_frame $(arg camera)_depth_frame" />

</launch>
